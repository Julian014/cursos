<div class="container mt-4">
  <h2>Crear Usuario Administrador</h2>

  {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
  {{/if}}

  <form action="/guardar_usuario_admin" method="POST">
    <div class="mb-3">
      <label for="nombre" class="form-label">Nombre</label>
      <input
        type="text"
        id="nombre"
        name="nombre"
        class="form-control"
        required
        value="{{form.nombre}}"
      />
    </div>

    <div class="mb-3">
      <label for="email" class="form-label">Correo Electr√≥nico</label>
      <input
        type="email"
        id="email"
        name="email"
        class="form-control"
        required
        value="{{form.email}}"
      />
    </div>

    <!-- rol fijo -->
    <input type="hidden" name="rol" value="admin" />

    <button type="submit" class="btn btn-primary">
      Guardar Usuario
    </button>
  </form>
</div>
